-->8
-- personnage

function create_player()
 p={
	 x=2,
	 y=2,
	 sprite=1
 }
end




function player_movement()
newx=p.x
newy=p.y

	if (btnp(➡️)) newx+=1
	if (btnp(⬆️)) newy-=1
	if (btnp(⬇️)) newy+=1
	if (btnp(⬅️)) newx-=1
	
	if not check_flag(0,newx,newy) then
	p.x=newx
	p.y=newy
	end	
end

function draw_player()
spr(p.sprite,newx*8,newy*8)
end

