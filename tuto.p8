function update_camera()
camx=mid(0,p.x-(7.5*8),127*8)
--camy=mid(0,p.y+7.5,16)
camera(camx)
end

--fond
function draw_background()
 rectfill(0,0,127*8,127*8,6)
 rectfill(0,95,127*8,127*8,7)
 end
