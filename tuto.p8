version 38
__lua__



function _init()
p={}
p.x=5
p.y=5
p.dx=0
p.dy=0

end

function _draw()
cls()
map(0,0,0,0,16,16)
if (is_grounded()) then
p.y=flr(flr(p.y)/8)*8
end
spr(1,p.x,p.y)
end

function is_grounded()
bloc=mget(flr(p.x+4)/8,flr(p.y)/8+1)
return fget(bloc,0)
end


function  _update()
p.dx=0
if (btn(0)) p.dx=-1
if (btn(1)) p.dx=1
p.x+=p.dx

if (is_grounded()) then
p.dy=0
if(btnp(2))p.dy=-8
else
p.dy+=0.98
if(p.dy>4)p.dy=4
end
p.y+=p.dy
end


